{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      0,
      "always"
    ],
    "subject-case": [
      2,
      "always",
      [
        "sentence-case",
        "lower-case"
      ]
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "footer-leading-blank": [
      2,
      "always"
    ]
  }
}
